{% extends "index.html.twig" %}

{% block content %}
<div class="d-flex justify-content-center">
<form method="post" action="index.php" class="well w-75 border border-3 border-dark" enctype="multipart/form-data">
	<fieldsetclass="form-group">
	 <legend>Nouveau jeu</legend>
	 <div class="form-group row my-2 d-flex justify-content-center">
	   <label for="nomjeu" class="col-sm-2 col-form-label col-form-label-sm">Nom du jeu</label>
	   <div class="col-sm-10">
		 <input  type="text" id="nomjeu" class="form-control form-control-sm" name="nom_jeu" required placeholder="Nom du jeu" />
	   </div>
	 </div>
	 <div class="form-group row my-2 d-flex justify-content-center">
	   <label for="regles" class="col-sm-2 col-form-label col-form-label-sm">Règles du jeu</label>
	   <div class="col-sm-10">
		 <textarea id="regles" class="form-control form-control-sm" name="regles" rows="5" cols="75" required placeholder="règles du jeu"/></textarea>
	   </div>
	 </div>
	 <div class="form-group row my-2 d-flex justify-content-center">
	   <label for="tempsdejeu" class="col-sm-2 col-form-label col-form-label-sm">Temps de jeu moyen</label>
	   <div class="col-sm-10">
		 <input  type="time" id="tempsdejeu" class="form-control form-control-sm" name="temps_de_jeu_moyen" required placeholder="temps de jeu moyen"/>
	   </div>
	 </div>
	 <div class="form-group row my-2 d-flex justify-content-center">
	   <label for="materiel" class="col-sm-2 col-form-label col-form-label-sm">Matériel necessaire</label>
	   <div class="col-sm-10">
		 <textarea id="materiel" class="form-control form-control-sm" name="materiel" rows="2" cols="10" required placeholder="materiel nécessaire"/></textarea>
	   </div>
	 </div>
	 <div class="form-group row my-2 d-flex justify-content-center">
	   <label for="nbjoueur" class="col-sm-2 col-form-label col-form-label-sm">Nombre de joueurs minimum</label>
	   <div class="col-sm-10">
		 <input type="number" min="0" id="nbjoueur" class="form-control form-control-sm" name="nb_joueurs_minimum" required placeholder="Nombre de joueurs minimum"/>
	   </div>
	 </div>
	 <div class="form-group row my-2 d-flex justify-content-center">
	   <label for="age" class="col-sm-2 col-form-label col-form-label-sm">Age minium</label>
	   <div class="col-sm-10">
		 <input type="number" min="0" id="age" class="form-control form-control-sm" name="age_minimum" required placeholder="Age minimum"/>
	   </div>
	 </div>
	 <div class="form-group row my-2 d-flex justify-content-center">
	   <label for="imgjeu" class="col-sm-2 col-form-label col-form-label-sm">Image du jeu</label>
	   <div class="col-sm-10">
		  <input type="file" required accept="image/png" name="img_jeu" id="imgjeu">
	   </div>
	 </div>
	 <div class="form-group row my-2 d-flex justify-content-center">
	   <label for="categorie" class="col-sm-2 col-form-label col-form-label-sm">Catégorie du jeu</label>
	   <div class="col-sm-10">
		 <select name="nom_categorie" id="categorie">
        {% for categorie in categories %}
         <option value="{{categorie.nom_categorie}}">{{categorie.nom_categorie}}</option>
        {% endfor %}
         </select>
	   </div>
	 </div>
	 <div class="my-2 d-flex justify-content-center">
	 <input  type="hidden" id="pseudo" name="pseudo" value='{{pseudo}}'/>
	 <input type="submit" class="btn border border-2 border-danger" name="valider_ajout_jeu" value="valider"/>
	 </div>
	</fieldset>
	</form>
	</div>

    {% endblock %}