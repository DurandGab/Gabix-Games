{% extends "index.html.twig" %}

{% block content %}

    <div  class="row d-flex container-fluid justify-content-around mx-auto" id="crea" >
        <h2 class="text-center">{{uti.pseudo}}</h2>
            <div class="card d-flex justify-content-around my-2 mx-0 col-12 col-sm-6 col-md-6 col-xl-3" style="width: 40rem;">
            <div class="card-body">
            <p><span class="fw-bold">Nom : </span>{{uti.nom}}</p>
            <p><span class="fw-bold">Prenom : </span>{{uti.prenom}}</p>
            <p><span class="fw-bold">Adresse mail : </span>{{uti.adresse_mail}}</p>
            <p><span class="fw-bold">Date de naissance : </span>{{uti.date_naiss}}</p>
            <p><span class="fw-bold">Date Inscription : </span>{{uti.date_inscription}}</p>
            </div>
        </div>
        
    </div>


    <div  class="row d-flex container-fluid justify-content-around my-2 mx-auto" id="crea" >
        <h2 class="text-center">Les jeux de l'utilisateur</h2>
            {% for jeu in jeux %}
            <div class="card d-flex justify-content-around my-3 mx-0 col-12 col-sm-6 col-md-6 col-xl-3" style="width: 30rem;">
                <div class="wrapper" style="height:280px; overflow:hidden;"><img src={{"img/" ~ jeu.img_jeu}} style="margin-left:-25%" class="w-auto my-2 card-img-top" alt=""/></div>
                <div class="card-body">
            <h5 class="card-title">{{jeu.nom_jeu}}</h5>
            <p class="card-text">{{jeu.nom_categorie}}</p>
            <a href="index.php?action=jeu&id={{jeu.id_jeu}}" class="btn btn-dark">Voir d√©tail jeu</a>
            </div>
        </div>
        {% endfor %}
    </div>


{% endblock %}
